<krpano version="1.20.11" title="Auto Tour">
	<include url="skin/vtourskin.xml" />

	<skin_settings maps="false"
				   gyro="true"
				   littleplanetintro="false"
				   title="true"
				   thumbs="true"
				   loadscene_flags="MERGE" />

	<action name="startup">
		loadscene(scene_1, null, MERGE, BLEND(1));
	</action>

